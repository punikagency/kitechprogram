---
import programmes from '../data/programmes.json';
import whykit from '../data/why-chose-kit.json';
import Container from '../components/shared/Container.astro';
import { Typography } from '../components/shared/Typography';
import DefaultLayout from '../layouts/DefaultLayout.astro';
import { link_to_register } from '../data/meta.json';
import { Image } from 'astro:assets';
---

<DefaultLayout>
	<main class="w-full h-full">
		<!-- Hero Section -->
		<section
			class="bg-blue-900 text-white bg-[url(/images/hero-bg.jpeg)] bg-no-repeat bg-blend-overlay bg-cover w-full h-[65vh] flex flex-col gap-3 justify-center items-center"
		>
			<Container
				className="flex flex-col justify-center items-center text-center space-y-4"
			>
				<Typography variant="h1">KITechProgram</Typography>
				<Typography variant="body">Empowering young innovators in technology and enlightening societies</Typography>
				<Typography variant="h3">(KIT'023)</Typography>
			</Container>

			<a href={link_to_register} class="button">Register now</a>
		</section>
	</main>

	<!-- THE TWO IMPORTANCT SECTIONS -->
	<section>
		<Container className="py-8 grid md:grid-cols-2 md:h-[60vh] gap-8">
			<div
				class="border h-full flex min-h-[180px] flex-col gap-4 justify-center items-center text-center"
			>
				<Typography variant="h2">Summit Event</Typography>
				<a class="button" href="">Register Now</a>
			</div>

			<div
				class="border h-full flex min-h-[180px] flex-col gap-4 justify-center items-center text-center"
			>
				<Typography variant="h2">BootCamp Program</Typography>
				<a class="button" href="">Get Started</a>
			</div>
		</Container>
	</section>

	<!-- Career Programmes -->
	<section>
		<Container className="py-8">
			<Typography variant="h1" className="pb-4 text-center">
				Career Programmes
			</Typography>

			<div class="grid grid-cols-2 lg:grid-cols-3 gap-x-6 gap-y-4">
				{
					programmes.map((program) => (
						<div class="program-card cursor-pointer bg-white rounded-xl shadow-md gap-2 flex flex-col justify-center items-center">
							<img
								class="md:h-80 h-60 object-cover w-full rounded-2xl"
								src={
									program.imgSrc
										? `images/${program.imgSrc}`
										: '/images/placeholder-image.jpeg'
								}
							/>
							<Typography variant="h5" className='text-center'>{program.name}</Typography>
						</div>
					))
				}
			</div>
		</Container>
	</section>

	<!-- Why CHOOSE KIT THIS SUMMER FOR YOUR KIDS?-->

	<section>
		<Container className="py-8">
			<Typography variant="h1" className="pb-4 text-center">
				Why KIT'023 Program for your Kid?
			</Typography>

			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 items-start">
				{
					whykit.map((why) => (
						<div class="relative overflow-hidden">
							<div class="bg-white transform -skew-y-6 px-6 py-8 rounded-lg shadow-lg relative z-10">
								<Typography
									variant="h3"
									className="font-bold text-gray-800 mb-4 transform skew-y-6"
								>
									{why.title}
								</Typography>
								<Typography
									variant="body-small"
									className="text-gray-600 transform skew-y-6"
								>
									{why.description}
								</Typography>
							</div>
						</div>
					))
				}
			</div>

			<a href={link_to_register} class="button w-max flex mx-auto my-4"
				>Register now</a
			>
		</Container>
	</section>
</DefaultLayout>

<style>
	.program-card {
		position: relative;
		width: 100%;
		padding: 20px;
	}
</style>
